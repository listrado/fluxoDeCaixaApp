<div class="auth-wrapper">
  <div class="auth-card">
    <h1 class="auth-title">Entrar</h1>

    <%# --- ERROS DO SERVIDOR (Devise) APÓS SUBMIT --- %>
    <% if flash.alert.present? %>
      <div class="error-banner" role="alert"><%= flash.alert %></div>
    <% end %>
    <% if flash.notice.present? %>
      <div class="notice-banner" role="status"><%= flash.notice %></div>
    <% end %>

    <div id="client-errors" class="error-banner" role="alert" style="display:none;"></div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                 html: { id: "login-form", "data-turbo-submits-with": "Carregando..." }) do |f| %>

      <div class="form-row">
        <%= f.label :email, "E-mail" %>
        <div class="input-col">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "auth-input", required: true, "aria-describedby": "email-error" %>
          <small id="email-error" class="field-error" aria-live="polite"></small>
        </div>
      </div>

      <div class="form-row">
        <%= f.label :password, "Senha" %>
        <div class="input-col">
          <%= f.password_field :password, autocomplete: "current-password",
                class: "auth-input", required: true, minlength: 6, "aria-describedby": "password-error" %>
          <small id="password-error" class="field-error" aria-live="polite"></small>
        </div>
      </div>

      <div class="actions-row">
        <% if devise_mapping.rememberable? %>
          <label class="remember">
            <%= f.check_box :remember_me %> Lembrar de mim
          </label>
        <% end %>

        <%= f.submit "Entrar", class: "btn-green" %>
      </div>
    <% end %>
  </div>
</div>

<div class="auth-links">
  <%= render "devise/shared/links" %>
</div>

<script>
  (function () {
    const form = document.getElementById("login-form");
    const email = form.querySelector('input[type="email"]');
    const password = form.querySelector('input[type="password"]');
    const emailErr = document.getElementById("email-error");
    const passErr  = document.getElementById("password-error");
    const clientErrs = document.getElementById("client-errors");

    function isValidEmail(v) {
      // email simples, suficiente para UX
      return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(v);
    }

    function clearBanner() {
      clientErrs.style.display = "none";
      clientErrs.textContent = "";
    }

    function setFieldError(input, el, msg) {
      input.classList.add("invalid");
      el.textContent = msg || "";
    }

    function clearFieldError(input, el) {
      input.classList.remove("invalid");
      el.textContent = "";
    }

    function validate() {
      let ok = true;
      clearBanner();

      // email
      if (!email.value.trim()) {
        setFieldError(email, emailErr, "Informe seu e-mail.");
        ok = false;
      } else if (!isValidEmail(email.value.trim())) {
        setFieldError(email, emailErr, "E-mail inválido.");
        ok = false;
      } else {
        clearFieldError(email, emailErr);
      }

      // senha
      if (!password.value) {
        setFieldError(password, passErr, "Informe sua senha.");
        ok = false;
      } else if (password.value.length < 6) {
        setFieldError(password, passErr, "A senha deve ter pelo menos 6 caracteres.");
        ok = false;
      } else {
        clearFieldError(password, passErr);
      }

      // banner resumido se houver erro
      if (!ok) {
        clientErrs.textContent = "Corrija os campos destacados e tente novamente.";
        clientErrs.style.display = "block";
      }
      return ok;
    }

    // valida em tempo real
    email.addEventListener("input", () => {
      if (email.value && isValidEmail(email.value)) clearFieldError(email, emailErr);
    });
    password.addEventListener("input", () => {
      if (password.value && password.value.length >= 6) clearFieldError(password, passErr);
    });

    // loading + bloqueio no submit
    form.addEventListener("submit", (e) => {
      if (!validate()) {
        e.preventDefault();
        return;
      }
      const btn = form.querySelector('input[type=submit], button[type=submit]');
      if (btn) {
        btn.dataset.originalText = btn.value || btn.innerText;
        if (btn.value !== undefined) { btn.value = "Carregando..."; } else { btn.innerText = "Carregando..."; }
        btn.disabled = true;
      }
    });
  })();
</script>
